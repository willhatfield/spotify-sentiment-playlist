# ---- Core backend app ----
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
FRONTEND_URL=http://localhost:8000/frontend
SESSION_SECRET=change-me

# ---- OpenAI scoring ----
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini

# ---- Local dataset ----
SPOTIFY_DATASET_PATH=/absolute/path/to/spotify_tracks.csv

# ---- Spotify OAuth (backend) ----
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8000/auth/spotify/callback
SPOTIFY_AUTHORIZE_URL=https://accounts.spotify.com/authorize
SPOTIFY_TOKEN_URL=https://accounts.spotify.com/api/token
SPOTIFY_API_BASE_URL=https://api.spotify.com/v1
SPOTIFY_SHOW_DIALOG=false
SPOTIFY_SCOPES=playlist-modify-private,playlist-modify-public,playlist-read-private,ugc-image-upload,user-read-email,user-read-private

# ---- CORS / frontend API ----
# Include your hosted frontend origin (Supabase domain or custom domain).
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,https://your-frontend-domain.example
# Public HTTPS URL that forwards to your local backend (Cloudflare Tunnel/ngrok).
LOCAL_BACKEND_PUBLIC_URL=https://your-tunnel-subdomain.trycloudflare.com
# Frontend API base; if empty, scripts/generate_frontend_config.py uses LOCAL_BACKEND_PUBLIC_URL.
NEXT_PUBLIC_API_BASE_URL=

# ---- Frontend runtime config (consumed by scripts/generate_frontend_config.py) ----
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_PROFILES_TABLE=profiles
SUPABASE_MOOD_HISTORY_TABLE=mood_history
# Use empty value when deployed at the site root; use /frontend for local subpath hosting.
FRONTEND_BASE_PATH=/frontend
