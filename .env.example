# ---- Core backend app ----
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
FRONTEND_URL=http://127.0.0.1:8000//frontend/index.html
SESSION_SECRET=__ANY_SECURE_KEY_

# ---- OpenAI scoring for /playlist/plan ----
OPENAI_API_KEY=__YOUR_OPENAI_API_KEY__
OPENAI_MODEL=gpt-4.1-mini


# ---- Local dataset for nearest-neighbor planning ----
SPOTIFY_DATASET_PATH=./Data/SpotifyTracksData.csv
CSV_PATH=./Data/SpotifyTracksData.csv

# ---- Spotify OAuth (existing app flow) ----
SPOTIFY_CLIENT_ID=__YOUR_SPOTIFY_CLIENT_ID__
SPOTIFY_CLIENT_SECRET=__YOUR_SPOTIFY_CLIENT_SECRET__
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/auth/callback
SPOTIFY_AUTHORIZE_URL=https://accounts.spotify.com/authorize
SPOTIFY_TOKEN_URL=https://accounts.spotify.com/api/token
SPOTIFY_API_BASE_URL=
SPOTIFY_SHOW_DIALOG=false
SPOTIFY_SCOPES=playlist-modify-private,playlist-read-private,ugc-image-upload,user-read-email,user-read-private

# ---- CORS / frontend ----
CORS_ORIGINS=http://127.0.0.1:8000/
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000/
